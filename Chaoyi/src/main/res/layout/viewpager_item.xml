<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.chaoyi.view.TypefaceTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="38sp" />

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white" />


            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="2dp"
                android:background="@drawable/imgeview_bg" />

            <TextView
                android:id="@+id/point2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="2dp"
                android:background="@drawable/imgeview_bg" />

            <TextView
                android:id="@+id/point3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="2dp"
                android:background="@drawable/imgeview_bg" />


            <TextView
                android:id="@+id/point4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="2dp"
                android:background="@drawable/imgeview_bg" />

            <TextView
                android:id="@+id/point5"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="2dp"
                android:background="@drawable/imgeview_bg" />

        </LinearLayout>

    </LinearLayout>

    <com.chaoyi.wheelview.WheelView
        android:id="@+id/wheel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="175dp"
        android:visibility="gone"
        app:isLoop="false"
        app:itemVisibleNum="3"
        app:lineColor="@android:color/white"
        app:lineSpaceingDimens="15dp"
        app:textColorCenter="@android:color/white"
        app:textColorOuter="@android:color/white"
        app:textSizeCenter="20dp"
        app:textSizeOuter="16dp" />

    <TextView
        android:id="@+id/timer_Scheduler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="04:59"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:visibility="gone" />


    <com.chaoyi.view.DiffuseView
        android:id="@+id/diffuseview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:diffuse_color="#aaf4f1f1"
        app:diffuse_coreColor="#aaf4f1f1"
        app:diffuse_coreRadius="340"
        app:diffuse_maxWidth="400"
        app:diffuse_speed="1"
        app:diffuse_width="5" />

</RelativeLayout>